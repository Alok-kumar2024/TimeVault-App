<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/VaultListRvLL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/LLWholeRv"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IvVaultLeverRv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/vault_img" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical">


            <TextView
                style="@style/VaultListRvName"
                android:id="@+id/TvShowVaultTitleRv"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Vault Title"
                android:inputType="textMultiLine"
                android:textStyle="bold"
                android:textSize="28sp"
                tools:ignore="TextViewEdits" />

            <View
                style="@style/VaultListRvNameUnderLine"
                android:layout_width="180dp"
                android:layout_height="1dp"
                android:layout_weight="2"/>

            <TextView
                style="@style/VaultListRvSecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Left : "
                android:textSize="20sp"
                android:layout_marginVertical="5dp"/>

            <TextView
                style="@style/VaultListRvSecondaryText"
                android:id="@+id/TvShowUnlockTimeRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:text="24 May 2025,8:00 AM"
                android:textSize="20sp"
                tools:ignore="TextViewEdits" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

<!--            <ImageButton-->
<!--                android:id="@+id/IbSettingsRv"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_gravity="start"-->
<!--                android:layout_margin="10dp"-->
<!--                android:background="@color/transparent"-->
<!--                android:src="@drawable/settings_vector" />-->

            <ImageView
                style="@style/VaultListRvLocImg"
                android:id="@+id/IvLockRv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/lock" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/VaultListRvStatus"
            android:id="@+id/TvShowStatusRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Locked"
            android:layout_gravity="start"
            android:textSize="20sp"
            android:layout_marginHorizontal="30dp"
            android:textStyle="bold"/>


    </LinearLayout>

</LinearLayout>