<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vault_shape_rv"
    android:elevation="2dp"
    android:id="@+id/LLWholeRv"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IvVaultLeverRv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/vault_lock_image"
            android:layout_gravity="center"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/TvShowVaultTitleRv"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Vault Title"
                android:inputType="textMultiLine"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="28sp"
                tools:ignore="TextViewEdits" />

            <View
                android:layout_width="180dp"
                android:layout_height="1dp"
                android:layout_weight="2"
                android:background="@color/gray_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlocks at : "
                android:textSize="20sp"
                android:textColor="@color/gray_dark"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/TvShowUnlockTimeRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:text="24 May 2025,8:00 AM"
                android:textColor="@color/gray_dark"
                android:textSize="20sp"
                tools:ignore="TextViewEdits" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/IbSettingsRv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:layout_margin="10dp"
                android:background="@color/transparent"
                android:src="@drawable/settings_vector" />

            <ImageView
                android:id="@+id/IvLockRv"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:tint="@color/black"
                android:layout_gravity="start"
                android:backgroundTint="@color/black"
                android:src="@drawable/lock" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textSize="20sp"
            android:textColor="@color/gray_dark"/>

        <TextView
            android:id="@+id/TvShowStatusRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locked"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:layout_marginHorizontal="30dp"
            android:textStyle="bold"/>


    </LinearLayout>

</LinearLayout>