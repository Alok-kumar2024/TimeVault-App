<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/AlertDialogVaultPasswordLL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:clipToOutline="true">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/vault_img"
        android:contentDescription="vaultImage"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/VaultNameAlertDialogVaultPasword"
        style="@style/AlertDialogVaultPasswordPrimaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vault Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_gravity="center" />

    <TextView
        style="@style/AlertDialogVaultPasswordPrimaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlock Vault"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_gravity="center" />

    <TextView
        style="@style/AlertDialogVaultPasswordSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your password to continue"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:gravity="center"
        android:maxWidth="280dp" />

    <EditText
        android:id="@+id/EtPasswordVaultAlerBox"
        style="@style/AlertDialogVaultPasswordEditPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="18sp"
        android:padding="14dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/BtnUnlockButtonAlertDialog"
        style="@style/AlertDialogVaultPasswordBtnUnlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unlock"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"
        android:padding="12dp" />
</LinearLayout>
