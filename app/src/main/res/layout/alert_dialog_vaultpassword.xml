<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center|top"
    android:background="@drawable/buttonbox_samlllrouned"
    android:backgroundTint="@color/white"
    android:orientation="vertical">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/vaultlock_for_alerbox" />

    <TextView
        android:id="@+id/VaultNameAlertDialogVaultPasword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Vault Name"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlock Vault"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:text="Enter The Password To Unlock The Vault"
        android:textColor="@color/gray_darker"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/EtPasswordVaultAlerBox"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:hint="Enter Password"
        android:layout_marginVertical="10dp"
        android:background="@drawable/textbox_alertbox_password"
        android:padding="15dp"/>

    <Button
        android:id="@+id/BtnUnlockButtonAlertDialog"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Unlock"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:background="@drawable/buttonbox_samlllrouned"
        app:backgroundTint="@color/blue" />



</LinearLayout>