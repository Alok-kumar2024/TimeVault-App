        <LinearLayout
            android:id="@+id/LLProfileInformationPopUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ProfileNamePopUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Name"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/ProfileEmailPopUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/gray_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="end"/>


        </LinearLayout>


<!--    </LinearLayout>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="5"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/black"/>

    <LinearLayout
        android:id="@+id/LLSettingsPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IVOfSettingsPopUp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="Settings Image View"
            android:src="@drawable/settings_vector"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/SettingsTextPopUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="5"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/black"/>

    <LinearLayout
        android:id="@+id/LLLogOutPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/pop_up_background"
        android:backgroundTint="@color/red"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/IVOfLogOutPopUp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="10dp"
            android:contentDescription="Settings Image View"
            android:src="@drawable/logout_vector" />

        <TextView
            android:id="@+id/LogoutTextPopUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="LOG OUT"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>