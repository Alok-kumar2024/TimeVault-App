<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/Popup_menuLL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/PopUpMenuLayout"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="16dp"
    android:orientation="vertical"
    android:clipToOutline="true"
    android:padding="12dp"
    android:elevation="8dp">

    <!-- Profile Info -->
    <LinearLayout
        android:id="@+id/LLProfileInformationPopUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="8dp">

        <TextView
            style="@style/Popup_menuPrimaryText"
            android:id="@+id/ProfileNamePopUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="end"/>

        <TextView
            style="@style/Popup_menuSecondaryText"
            android:id="@+id/ProfileEmailPopUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@example.com"
            android:textSize="14sp"
            android:layout_gravity="end"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        style="@style/Popup_menuDivder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"/>

    <!-- Settings -->
    <LinearLayout
        android:id="@+id/LLSettingsPopUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            style="@style/Popup_menuImageTint"
            android:id="@+id/IVOfSettingsPopUp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/settings_vector"
            android:contentDescription="Settings"/>

        <TextView
            style="@style/Popup_menuPrimaryText"
            android:id="@+id/SettingsTextPopUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Settings"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        style="@style/Popup_menuDivder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"/>

    <!-- Logout -->
    <LinearLayout
        android:id="@+id/LLLogOutPopUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            style="@style/Popup_menuImageTint"
            android:id="@+id/IVOfLogOutPopUp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/logout_vector"
            android:contentDescription="Logout"/>

        <TextView
            style="@style/Popup_menuPrimaryText"
            android:id="@+id/LogoutTextPopUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="LOG OUT"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>
