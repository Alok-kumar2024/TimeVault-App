<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/VaultFileRvBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/IvShowImageOfFileType"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/vault_unknow_vector" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingVertical="4dp">

        <TextView
            android:id="@+id/TvShowFileNameRv"
            style="@style/VaultFileRvPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="File Name" />

        <TextView
            android:id="@+id/TvShowUploadDateRv"
            style="@style/VaultFileRvSecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Date" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/IbDownloadFilesRv"
        style="@style/VaultFileRvBtnDownload"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:src="@drawable/cloud_download_vector" />
</LinearLayout>