<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/VaultFileRvBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <ImageView
        style="@style/SettingsImageButton"
        android:id="@+id/IvShowImageOfFileType"
        android:layout_width="40sp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:src="@drawable/vault_unknow_vector" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/VaultFileRvPrimaryText"
            android:id="@+id/TvShowFileNameRv"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="File Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            style="@style/VaultFileRvSecondaryText"
            android:id="@+id/TvShowUploadDateRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Upload Date"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            style="@style/VaultFileRvBtnDownload"
            android:id="@+id/IbDownloadFilesRv"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:scaleType="center"
            android:src="@drawable/cloud_download_vector"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"/>


    </LinearLayout>

</LinearLayout>