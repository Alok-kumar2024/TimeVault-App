<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/VaultItemsRvBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/IVFileIconRv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:layout_gravity="center"
            android:backgroundTint="@color/transparent"/>
        
        <TextView
            style="@style/VaultItemsRvName"
            android:id="@+id/TvFileNameRv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textMultiLine"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:padding="8dp"
            android:text="just testing"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:background="@color/transparent"
            android:layout_marginVertical="10dp">

            <ImageButton
                style="@style/VaultItemsRvImgCross"
                android:id="@+id/IBremoveButtonRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/remove_vector" />

        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>