<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/AlertForgotPasswordLL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="24dp"
    android:paddingHorizontal="16dp"
    android:gravity="center_horizontal">

    <!-- Icon Card -->
    <androidx.cardview.widget.CardView
        style="@style/AlertForgotPasswordCard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp"
        android:layout_gravity="center">

        <ImageView
            style="@style/AlertForgotPasswordImgLock"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/lock_outline_vector" />
    </androidx.cardview.widget.CardView>

    <!-- Title -->
    <TextView
        style="@style/AlertForgotPasswordPrimaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="FORGOT PASSWORD"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Subtitle -->
    <TextView
        style="@style/AlertForgotPasswordSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        android:text="Enter your email and we'll send you a reset link."
        android:textSize="16sp"
        android:gravity="center"
        android:textAlignment="center" />

    <!-- Email Field -->
    <EditText
        style="@style/AlertForgotPasswordEditEmail"
        android:id="@+id/EtEmailAlertBox_ForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:hint="Email"
        android:padding="14dp"
        android:textSize="16sp"
        android:background="@drawable/textbox_alertbox_password"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress" />

    <!-- Reset Button -->
    <com.google.android.material.button.MaterialButton
        style="@style/AlertForgotPasswordBtnReset"
        android:id="@+id/BtnResetPasswordAlertBoxForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:text="RESET PASSWORD"
        android:textSize="16sp" />

    <!-- Cancel Button -->
    <com.google.android.material.button.MaterialButton
        style="@style/AlertForgotPasswordBtnCancel"
        android:id="@+id/BtnCancelAlertBoxForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="24dp"
        android:text="CANCEL"
        android:textSize="16sp"
        android:backgroundTint="?attr/colorSurfaceVariant"
        android:textColor="?attr/colorOnSurfaceVariant" />

</LinearLayout>
