<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/Popup_menuLL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/PopUpMenuLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="16dp"
    android:orientation="vertical"
    android:clipToOutline="true"
    android:padding="12dp"
    android:elevation="8dp">

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/LLPinnedPopUpVaultList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                style="@style/Popup_menuImageTint"
                android:id="@+id/IvOfPopUpVaultListPin"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/pin_vector"
                android:contentDescription="Delete Vault"/>

            <TextView
                style="@style/Popup_menuPrimaryText"
                android:id="@+id/TvPinPopUPVaultList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Pin"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    <!-- Divider -->
    <View
        style="@style/Popup_menuDivder"
        android:id="@+id/PopUpDividerVaultList"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"/>

    <!-- Share Info -->
    <LinearLayout
        android:id="@+id/LLSharePopUpVaultList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingVertical="8dp">

        <ImageView
            style="@style/Popup_menuImageTint"
            android:id="@+id/IvOfPopUpVaultListShare"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/share_vector"
            android:layout_gravity="center"
            android:contentDescription="Share Vault"/>

        <TextView
            style="@style/Popup_menuPrimaryText"
            android:id="@+id/TvSharePopUPVaultList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Share"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>


</LinearLayout>
