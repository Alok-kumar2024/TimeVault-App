<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/AlertDialogLogoutLL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Profile Image -->
    <androidx.cardview.widget.CardView
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:cardCornerRadius="48dp"
        app:cardElevation="8dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <ImageView
            style="@style/AlertDialogLogoutProfileImg"
            android:id="@+id/IvProfileImageLogOut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_image_vector" />
    </androidx.cardview.widget.CardView>

    <!-- User Name -->

    <!-- Logout Confirmation Text -->
    <TextView
        android:id="@+id/TvUserNameLogout"
        style="@style/AlertDialogLogoutPrimaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:text="user"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        style="@style/AlertDialogLogoutSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to log out?"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:gravity="center" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <Button
            style="@style/AlertDialogLogoutBtnCancel"
            android:id="@+id/BtnCancelLogOutAlertBox"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <Button
            style="@style/AlertDialogLogoutBtnLogOut"
            android:id="@+id/BtnLogOutAlterBox"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Logout"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
