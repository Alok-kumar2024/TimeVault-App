<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#020126"
                android:endColor="#140338"
                android:angle="45" />
        </shape>
    </item>

    <!-- Optional overlay stripes -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00000000"
                android:endColor="#22D90C0C"
                android:angle="45"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
